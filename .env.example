
# Server Configuration
PORT=3000
API_BASE_URL=http://localhost:3000/api/v1

# MongoDB Connection
# For Docker, use 'mongo'. For local dev, use 'localhost' or '127.0.0.1'.
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_USER=root
MONGO_PASSWORD=password
MONGO_DB_NAME=lawoffice
MONGO_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DB_NAME}?authSource=admin

# Redis Configuration
# For Docker, use 'redis'. For local dev, use 'localhost' or '127.0.0.1'.
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secrets
ACCESS_TOKEN_SECRET=your_super_secret_access_token
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token

# Google OAuth Credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_AUTH_REDIRECT_URI=${API_BASE_URL}/auth/google/callback
GOOGLE_CALENDAR_REDIRECT_URI=${API_BASE_URL}/google/calendar/callback

# Initial Admin User for DB Seed
ADMIN_NAME=
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Email Configuration (for Nodemailer)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM="Law Office Management" <noreply@example.com>
