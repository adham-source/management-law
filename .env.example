# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3001

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/law-office-management

# Redis Connection
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secrets - IMPORTANT: Use long, random strings in production
ACCESS_TOKEN_SECRET=your_super_secret_access_token_key
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key
REFRESH_TOKEN_EXPIRES_IN=7d

# Default Admin User for Seeding
ADMIN_NAME=SuperAdmin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=supersecretpassword

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_AUTH_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/v1/google/calendar/callback

# Email SMTP Configuration (Example using Mailtrap)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_mailtrap_user
EMAIL_PASS=your_mailtrap_password
EMAIL_FROM=sales@example.com
